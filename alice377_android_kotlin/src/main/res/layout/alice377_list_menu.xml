<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mistyrose"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
            android:id="@+id/menu_I_img"
            style="@android:style/Widget.DeviceDefault.Light.ImageButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/lavenderblush" android:src="@drawable/googleg_standard_color_18"/>

    <TextView
            android:id="@+id/menu_T_title"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/menu_I_img"
            android:layout_toRightOf="@+id/menu_I_img"
            android:background="@color/lavenderblush"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="@string/menu_t_title"
            android:textColor="@color/black"
            android:textSize="24sp"/>

    <Button
        android:id="@+id/menu_sql_B_btn"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/menu_T_title"
        android:layout_marginTop="15dp"
        android:background="@color/lightgreen"
        android:onClick="sqlbtn"
        android:text="@string/menu_sql_b_btn"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <Button
        android:id="@+id/menu_table_B_btn"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/menu_sql_B_btn"
        android:layout_marginTop="15dp"
        android:background="@color/lightgreen"
        android:onClick="tablebtn"
        android:text="@string/menu_table_b_btn"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <Button
        android:id="@+id/menu_logdel_B_btn"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/menu_table_B_btn"
        android:layout_marginTop="15dp"
        android:background="@color/lightgreen"
        android:onClick="logdelbtn"
        android:text="@string/menu_logdel_b_btn"
        android:textColor="@color/black"
        android:textSize="26sp" />

</RelativeLayout>